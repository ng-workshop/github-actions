#!/usr/bin/env sh

configure_docker()
{
  if [ ! -f .env.docker.local ]
  then
    {
      echo USER_ID="$(id -u)"
      echo GROUP_ID="$(id -g)"
    } >> .env.docker.local
  fi
}

configure_hosts()
{
  if ! grep --quiet '###> workshop-ci.local ###' /etc/hosts
  then
    sudo bash -c 'cat << EOF >> /etc/hosts
  ###> workshop-ci.local ###
  10.11.11.2 symfony.workshop-ci.local
  10.11.11.2 vuejs.workshop-ci.local
  10.11.11.2 cdn.workshop-ci.local
  10.11.11.5 postgres.workshop-ci.local
  10.11.11.6 ftp.workshop-ci.local
  ###< workshop-ci.local ###

  EOF'
  fi
}

configure_ssh()
{
  mkdir -p .ssh
  rm -f .ssh/*
  ssh-keygen -t rsa -b 4096 -C "workshop-ci" -f .ssh/id_workshop-ci -N ""
}

main()
{
  case "${1}" in
    docker)
      configure_docker

      exit 0
      ;;
    hosts)
      configure_hosts

      exit 0
      ;;
    ssh)
      configure_ssh

      exit 0
      ;;
    *)
      configure_docker
      configure_hosts
      configure_ssh

      exit 0
  esac
}

main "${@}"
